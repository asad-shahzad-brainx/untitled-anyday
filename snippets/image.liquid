{% comment %}
{% render 'image', image: , class_name: , image_attr: , decorate_img: boolean %}
{% endcomment %}

{%- assign alt = image.alt | escape -%}
{%- assign img_url = image | img_url: '1x1' -%}

<img id="{{ image.id }}"
     class="{{ class_name }} lazyload"
    {% if decorate_img %} alt="" {% else %}alt="{{ alt }}"{% endif %}
     src="{{ img_url }}"
     data-srcset="{{ image | img_url: '360x' }} 360w,
                  {{ image | img_url: '540x' }} 540w,
                  {{ image | img_url: '720x' }} 720w,
                  {{ image | img_url: '900x' }} 900w,
                  {{ image | img_url: '1080x' }} 1080w,
                  {{ image | img_url: '1296x' }} 1296w,
                  {{ image | img_url: '1512x' }} 1512w,
                  {{ image | img_url: '1728x' }} 1728w"
     data-aspectratio="{{ image.aspect_ratio }}"
     data-sizes="auto" {{ image_attr }}>
